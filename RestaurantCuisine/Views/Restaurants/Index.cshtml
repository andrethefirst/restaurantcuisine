@{
  Layout = "_Layout";
}

@using RestaurantCuisine.Models;
@model List<RestaurantCuisine.Models.Restaurant>;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
} 

@foreach (Restaurant restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId }) | @restaurant.Cuisines.Type</li>
}

<p>@Html.ActionLink("Add new restaurant", "Create")</p>

<p>@Html.ActionLink("Back to home", "Index", "Home")</p>