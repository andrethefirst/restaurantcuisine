@{
  Layout = "_Layout";
}

@using RestaurantCuisine.Models;
@model List<RestaurantCuisine.Models.Review>;

<h1>Reviews</h1>

@if (@Model.Count == 0)
{
  <h3>No reviews have been added yet!</h3>
} 

@foreach (Review review in Model)
{
  <li>@Html.ActionLink($"{review.Description}", "Details", new { id = review.ReviewId }) | @review.Restaurants.Name</li>
}

<p>@Html.ActionLink("Add new review", "Create")</p>

<p>@Html.ActionLink("Back to home", "Index", "Home")</p>